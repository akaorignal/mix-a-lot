<div class="container">
    <div class="row">
        <h3>List of All Liquors</h3>
    </div>

    <div class="row">
        <table>
            <thead>
                <tr>
                    <th><strong>Name</strong></th>
                    <th><strong>Spirit</strong></th>
                    <th><strong>Aging</strong></th>
                    <th><strong>Label</strong></th>
                    <th><strong>Country of Origin</strong></th>
                    <th><strong>City of Origin</strong></th>
                    <th><strong>Proof</strong></th>
                </tr>
            </thead>
            {{#each liquor}}
            <tbody>
                <tr>
                    <td>{{this.liquor_name}}</td>
                    <td>{{this.spirits}}</td>
                    <td>{{this.aging}}</td>
                    <td>{{this.label}}</td>
                    <td>{{this.country}}</td>
                    <td>{{this.city_of_origin}}</td>
                    <td>{{this.proof}}</td>
                </tr>
            </tbody>
            {{/each}}
        </table>
    </div>

    <div class="row">
        {{!-- Search --}}
        <form>
            <div class="form-group">
                <label for="liquor-search">Search for Liquor</label>
                <input type="text" class="form-control" id="liquor-search">
                <button type="GET" class="btn btn-default"><a href="/api/mixed-drinks/:id">Submit</a></button>
            </div>
        </form>

        <button class="btn btn-block liquor-add">
            <a href="#">Add a New Liquor!</a>
        </button>
    </div>

</div>
