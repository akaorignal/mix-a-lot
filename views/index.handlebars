<h1>Liquors to Add</h1>

<ul>
  {{#each liquor}}
    <li>
      <p>
        {{this.liquor_id}}. {{this.liquor_name}}
        {{!-- {{Added delete method}} --}}
        <form action="/delete?_method=DELETE" method="POST">
        <input type="hidden" name="id" value="{{this.id}}">
        <button type="submit">DELETE</button>
        </p>
    </li>
 
  {{/each}}
</ul>

<h2>Add a Liquor</h2>
<form method="POST" action="/create">
	<textarea type="text" name="liquor"></textarea>
	<button type="submit">Save Liquor</button>
</form>

<h2>Update a Liquor</h2>
<form method="POST" action="/update?_method=PUT">
  <input type="text" name="id" placeholder="id">
	<textarea type="text" name="liquor" placeholder="New Liquor Name"></textarea>
	<button type="submit">Update Liquor!</button>
</form>

